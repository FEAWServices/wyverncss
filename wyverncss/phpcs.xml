<?xml version="1.0"?>
<ruleset name="WyvernCSS">
	<description>WyvernCSS WordPress Coding Standards</description>

	<!-- Use WordPress Core ruleset -->
	<rule ref="WordPress-Core">
		<!-- Exclude file naming rules since we use PSR-4 autoloading with kebab-case -->
		<exclude name="WordPress.Files.FileName.InvalidClassFileName"/>
		<exclude name="WordPress.Files.FileName.NotHyphenatedLowercase"/>
	</rule>
	<rule ref="WordPress-Docs"/>
	<rule ref="WordPress-Extra">
		<!-- Exclude file naming rules since we use PSR-4 autoloading with kebab-case -->
		<exclude name="WordPress.Files.FileName.InvalidClassFileName"/>
		<exclude name="WordPress.Files.FileName.NotHyphenatedLowercase"/>
	</rule>

	<!-- Allow direct database calls for plugin activation/deactivation/uninstall -->
	<rule ref="WordPress.DB.DirectDatabaseQuery">
		<exclude-pattern>*/includes/Core/class-activator.php</exclude-pattern>
		<exclude-pattern>*/includes/Core/class-deactivator.php</exclude-pattern>
		<exclude-pattern>*/uninstall.php</exclude-pattern>
		<exclude-pattern>*/includes/AI/class-cost-tracker.php</exclude-pattern>
		<exclude-pattern>*/includes/Settings/class-settings-service.php</exclude-pattern>
		<exclude-pattern>*/includes/Analytics/*</exclude-pattern>
		<exclude-pattern>*/includes/Patterns/class-pattern-cache.php</exclude-pattern>
		<exclude-pattern>*/includes/Generator/class-response-cache.php</exclude-pattern>
		<exclude-pattern>*/includes/Database/*</exclude-pattern>
		<exclude-pattern>*/includes/MCP/Security/class-validator.php</exclude-pattern>
		<exclude-pattern>*/includes/API/REST/*</exclude-pattern>
		<exclude-pattern>*/includes/Conversation/*</exclude-pattern>
	</rule>

	<!-- Allow schema changes in activation and uninstall -->
	<rule ref="WordPress.DB.PreparedSQL.NotPrepared">
		<exclude-pattern>*/includes/Core/class-activator.php</exclude-pattern>
		<exclude-pattern>*/uninstall.php</exclude-pattern>
	</rule>

	<!-- Exclude caching requirements for plugin activation/deactivation -->
	<rule ref="WordPress.DB.DirectDatabaseQuery.NoCaching">
		<exclude-pattern>*/includes/Core/class-activator.php</exclude-pattern>
		<exclude-pattern>*/includes/Core/class-deactivator.php</exclude-pattern>
		<exclude-pattern>*/uninstall.php</exclude-pattern>
		<exclude-pattern>*/includes/AI/class-cost-tracker.php</exclude-pattern>
		<exclude-pattern>*/includes/Settings/class-settings-service.php</exclude-pattern>
		<exclude-pattern>*/includes/Analytics/*</exclude-pattern>
		<exclude-pattern>*/includes/Patterns/class-pattern-cache.php</exclude-pattern>
		<exclude-pattern>*/includes/Generator/class-response-cache.php</exclude-pattern>
		<exclude-pattern>*/includes/Database/*</exclude-pattern>
		<exclude-pattern>*/includes/MCP/Security/class-validator.php</exclude-pattern>
		<exclude-pattern>*/includes/API/REST/*</exclude-pattern>
		<exclude-pattern>*/includes/Conversation/*</exclude-pattern>
	</rule>

	<!-- Exclude schema change warnings for activation -->
	<rule ref="WordPress.DB.DirectDatabaseQuery.SchemaChange">
		<exclude-pattern>*/includes/Core/class-activator.php</exclude-pattern>
		<exclude-pattern>*/uninstall.php</exclude-pattern>
	</rule>

	<!-- Allow base64_decode for media upload (legitimate use for image data) -->
	<rule ref="WordPress.PHP.DiscouragedPHPFunctions.obfuscation_base64_decode">
		<exclude-pattern>*/includes/MCP/Tools/Media/class-upload-media-tool.php</exclude-pattern>
	</rule>

	<!-- Check for PHP cross-version compatibility -->
	<config name="testVersion" value="8.1-"/>

	<!-- Set text domain -->
	<config name="text_domain" value="wyverncss"/>

	<!-- Minimum WordPress version -->
	<config name="minimum_wp_version" value="6.4"/>

	<!-- Show progress -->
	<arg value="sp"/>
	<arg name="colors"/>

	<!-- Check these paths -->
	<file>.</file>

	<!-- Exclude patterns -->
	<exclude-pattern>*/vendor/*</exclude-pattern>
	<exclude-pattern>*/node_modules/*</exclude-pattern>
	<exclude-pattern>*/tests/*</exclude-pattern>
	<exclude-pattern>*/assets/*</exclude-pattern>
</ruleset>
